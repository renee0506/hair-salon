@{
  Layout="Shared/_Layout.cshtml";
}
<div class="row">
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading"><h2>Edit Client Information</h2></div>
      <div class="panel-body full-height">
        <h1>@Model["client"].GetName()</h1>
        <h4>Client of @Model["stylist"].GetName()</h4>

        <form action="/stylist/@Model["stylist"].GetId()/client/@Model["client"].GetId()/edited" method="post" class="form-group">
          <input type="hidden" name="_method" value="PATCH">
          <label for="new-client-name">Enter New Client Name:</label>
          <input type="text" name="new-client-name" class="form-control">
          <button type="submit" class = "btn">Submit</button>
        </form>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2>Manage</h2>
      </div>
      <div class="panel-body full-height">
        <a href="/stylist/@Model["stylist"].GetId()">Back to Stylist Info</a><br>
        <a href="/">Back to Index</a>
      </div>
    </div>
  </div>


</div>
