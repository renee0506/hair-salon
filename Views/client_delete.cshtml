@{
  Layout="Shared/_Layout.cshtml";
}

<div class="row">
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading"><h2>Delete Client</h2></div>
      <div class="panel-body full-height">
        <h1>@Model["client"].GetName()</h1>
        <h4>Client of @Model["stylist"].GetName()</h4>
        <h1>Are you sure that you want to delete this client?</h1>
        <form action="/stylist/@Model["stylist"].GetId()/client/@Model["client"].GetId()/deleted" method="post" class="form-group">
          <input type="hidden" name="_method" value="DELETE" class="form-group">
          <button type="submit" class="btn">Delete</button>
        </form>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2>Manage</h2>
      </div>
      <div class="panel-body full-height">
        <a href="/stylist/@Model["stylist"].GetId()">Back to Stylist Info</a><br>
        <a href="/">Back to Index</a>
      </div>
    </div>
  </div>
</div>
